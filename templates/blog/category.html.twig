{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <div>
        <h1>Category : {{ category.name }}</h1>
        {% for article in category.articles|reverse|slice(0,3) %}
            <h2>Articles : {{ article.title }}</h2> {{ article.id }}
        {% endfor %}
    </div>

    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>

{% endblock %}